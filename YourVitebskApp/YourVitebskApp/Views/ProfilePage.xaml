<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="YourVitebskApp.Views.ProfilePage"
             Title="Профиль">
    <ContentPage.ToolbarItems>
        <ToolbarItem Icon="icon_settings.png" Text="Настройки" Clicked="Settings_Clicked"/>
    </ContentPage.ToolbarItems>
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Страница с профилем" TextColor="Black" />
            <Label x:Name="Email" TextColor="Black"/>
            <Button VerticalOptions="Center" Text="Выйти" Clicked="LoginButton_Clicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>